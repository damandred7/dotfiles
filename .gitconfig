	email = Anderson_Marshall@shure.com
[core]
    autocrlf = false
    excludesfile = ~/.gitignore_global
[diff]
    tool = bc3
[merge]
    tool = bc3
[alias]
    sync = pull --rebase
    st = status -s
    sl = stash list
    ss = stash show
    ssd = stash show -p
    files = diff --stat
    ahead = rev-list --left-right --count

    ;Show current branch only (long, short, full stats)
    lcl = log --graph --pretty=format:'%C(auto)%h %C(bold blue)(%cd) %C(magenta)<%an> %C(white)-%C(auto)%d %s' --date=short
    lc  = lcl -25
    lcf = lcl --stat

    ;Show builds (long, short, full stats)
    lbl = lcl --branches --tags --remotes
    lb  = lbl -25
    lbf = lbl --stat

    ;Don't show builds (long, short, full stats)
    ll  = lbl --decorate-refs-exclude=*/builds/*
    l   = ll -25
    lf  = ll --stat
[push]
    default = simple
[color]
    ui = auto
[mergetool "bc4"]
    trustExitCode = true
[mergetool "bc3"]
    trustExitCode = true
